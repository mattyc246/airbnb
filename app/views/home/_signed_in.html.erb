<div class="container w-100">

	<div class="w-50 bg-light border rounded p-3 mt-5 shadow-lg">

		<h3>Book your next stay with us now!</h3>
		<hr>

			<%= form_for Listing.new do |form| %>

				<%= form.label "Location" %>
				<%= form.text_field :country, placeholder: "Search Country...", class:"form-control" %>

			<hr>

			<div class="d-flex flex-wrap">

				<%= form.label "No Of Guests" %>
				<%= form.select :guest_number, options_for_select([["1 - 10", "1..10"],["11 - 20", "11..20"],["21-30", "21..30"],["31 +", "31..1000000"]]), {prompt: "No. Of Guests"}, {class:"form-control"} %>

				<%= form.label "No Of Rooms", class:"mt-3" %>
				<%= form.select :room_number, options_for_select([["1 - 3", "1..3"],["4 - 6", "4..6"],["7 - 9", "7..9"],["10 +", "10..100000"]]), {prompt: "No. Of Rooms"}, {class:"form-control"}%>

			</div>

			<hr>

			<div class="w-100 pl-3 pr-3 clearfix">

				<div class="w-25 float-left">
				<%= form.label "Check In" %>
				<button class="btn btn-primary">Pick Date</button>
				</div>

				<div class="w-25 float-right">
				<%= form.label "Check Out" %>
				<button class="btn btn-primary">Pick Date</button>
				</div>

			</div>

			<hr>

			<div class="text-right mt-2">

				<%= form.submit "Search", class:"btn btn-danger text-white" %>

			</div>

			<% end %>

	</div>
</div>
